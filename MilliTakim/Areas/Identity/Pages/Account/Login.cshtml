@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="~/css/panel.css" rel="stylesheet" />
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!--login modal-->
<body>
    <div class="modal-dialog">
        <div class="modal-content modal-open">
            <div class="modal-header">
                <h1 class="text-center">@localizer["Oturum Aç"]</h1>
            </div>
            <div class="modal-body">
                <form class="form col-md-12 center-block" id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control input-lg" placeholder="Email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" class="form-control input-lg" placeholder="@localizer["Şifre"]" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-lg btn-block">@localizer["Giriş Yap"]</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
