@page
@model RegisterModel
@{
    ViewData["Title"] = "Kayıt Ol";
}
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<h1>@localizer["Kayıt Ol"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>@localizer["Yeni Bir Hesap Oluştur"]</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @localizer[@Html.DisplayNameFor(model => model.Input.Ad)]
                        <input asp-for="Input.Ad" class="form-control" />
                        <span asp-validation-for="Input.Ad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @localizer[@Html.DisplayNameFor(model => model.Input.Soyad)]
                        <input asp-for="Input.Soyad" class="form-control" />
                        <span asp-validation-for="Input.Soyad" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @localizer[@Html.DisplayNameFor(model => model.Input.Password)]
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @localizer[@Html.DisplayNameFor(model => model.Input.ConfirmPassword)]
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">@localizer["Kayıt Ol"]</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
