@using Microsoft.AspNetCore.Identity
@using MilliTakim.Areas.Identity.Data
@model IEnumerable<MilliTakim.Models.Futbolcu>
@inject SignInManager<AuthUser> SignInManager
@inject UserManager<AuthUser> UserManager
@{

    var futbolcu = ViewData["futbolcu"] as Futbolcu;
}
<link href="~/css/futbolcu.css" rel="stylesheet" />
<div class="container py-5">
    @if (SignInManager.IsSignedIn(User))
    {
        @if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Admin"))
        {
            <dl class="row">
                <dt class="col-sm-10">
                    @Html.DisplayNameFor(model => model.futbolcuAd)
                    @Html.DisplayNameFor(model => model.futbolcuSoyad)
                    @Html.DisplayNameFor(model => model.futbolcuYas)
                    @Html.DisplayNameFor(model => model.futbolcuMevki)
                    @Html.DisplayNameFor(model => model.futbolcuMarketDegeri)
                    @Html.DisplayNameFor(model => model.futbolcuInsta)
                    @Html.DisplayNameFor(model => model.futbolcuTwitter)
                </dt>
            </dl>
            <form asp-action="FutbolcuEkle">

                <input asp-for="@futbolcu.futbolcuAd" class="form-control" />
                <span asp-validation-for="@futbolcu.futbolcuAd" class="text-danger"></span>

                <input asp-for="@futbolcu.futbolcuSoyad" class="form-control" />
                <span asp-validation-for="@futbolcu.futbolcuSoyad" class="text-danger"></span>

                <input asp-for="@futbolcu.futbolcuYas" value="" class="form-control" />
                <span asp-validation-for="@futbolcu.futbolcuYas" class="text-danger"></span>

                <input asp-for="@futbolcu.futbolcuMarketDegeri" value="" class="form-control" />
                <span asp-validation-for="@futbolcu.futbolcuMarketDegeri" class="text-danger"></span>

                <input asp-for="@futbolcu.futbolcuInsta" class="form-control" />
                <span asp-validation-for="@futbolcu.futbolcuInsta" class="text-danger"></span>

                <input asp-for="@futbolcu.futbolcuTwitter" class="form-control" />
                <span asp-validation-for="@futbolcu.futbolcuTwitter" class="text-danger"></span>

                <select asp-for="@futbolcu.futbolcuMevki" asp-items="Html.GetEnumSelectList<Futbolcu.Mevki>()">
                    <option selected="selected" value="">Lutfen Bir Mevki Seciniz</option>
                </select>
                <span asp-validation-for="@futbolcu.futbolcuMevki" class="text-danger"></span>

                <button type="submit" class="btn btn-primary btn-lg btn-block">Ekle</button>
            </form>
        }
    }
    <div class="row mb-4">
        <div class="col-lg-5">
            <h2 class="display-4 font-weight-light">Futbolcularımız</h2>
            <p class="font-italic text-muted">Türkiye Milli Takım Futbolcuları</p>
        </div>
    </div>
    <div class="row text-center">

        @if (Model != null)
        {
            <div class="row text-center">
                @foreach (var item in Model)
                {
                    <div class="col-xl-4 col-sm-6 mb-5">
                        <div class="bg-white rounded shadow-sm py-5 px-4">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="" width="100" class="img-fluid rounded-circle mb-3 img-thumbnail shadow-sm">
                            <h5 class="mb-0">@Html.DisplayFor(modelItem => item.futbolcuAd) @Html.DisplayFor(modelItem => item.futbolcuSoyad)</h5>
                            <span class="small text-uppercase text-muted">@Html.DisplayFor(modelItem => item.futbolcuYas)</span>
                            <span class="small text-uppercase text-muted">@Html.DisplayFor(modelItem => item.futbolcuMevki)</span>
                            <span class="small text-uppercase text-muted">@Html.DisplayFor(modelItem => item.futbolcuMarketDegeri)</span>
                            <ul class="social mb-0 list-inline mt-3">
                                <li class="list-inline-item"><a href="https://www.facebook.com" class="social-link"><i class="fa fa-facebook-f"></i></a></li>
                                <li class="list-inline-item"><a href="https://www.twitter.com" class="social-link"><i class="fa fa-twitter"></i></a></li>
                                <li class="list-inline-item"><a href="https://www.instagram.com" class="social-link"><i class="fa fa-instagram"></i></a></li>
                                <li class="list-inline-item"><a href="https://www.linkedin.com" class="social-link"><i class="fa fa-linkedin"></i></a></li>
                            </ul>
                            @if (SignInManager.IsSignedIn(User))
                            {
                                @if (await UserManager.IsInRoleAsync(await UserManager.GetUserAsync(User), "Admin"))
                                {
                                    <a asp-action="FutbolcuSil" asp-route-id="@item.playerId">Sil</a>
                                    <a asp-action="FutbolcuDuzenle" asp-route-id="@item.playerId">Duzenle</a>
                                }
                            }
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}